<div class="site-hero">
  <div class="site-hero__container container grid">
    <div class="site-hero__content">
      <h1 class="site-hero__title">
        <span class="first-word">FL</span><br>
        Drupal<br>
        Camp
      </h1>
      {% if camp_details.field_homepage_media_cta.0 %}
        <div class="site-hero__cta">
          <a href="{{ camp_details.field_homepage_media_cta.0.url }}" class="site-hero__media-cta">
            {{ camp_details.field_homepage_media_cta.title }}
            {% include '@pubsub/includes/svg/arrow-right.svg' %}
          </a>
        </div>
      {% endif %}
    </div>
    <div class="site-hero__details">
      {% if camp_details.field_dates.0 %}
        <span class="site-hero__details-item">
          {{- camp_details.field_dates.value|date('M d') -}}
          -
          {{- camp_details.field_dates.end_value|date('d, Y') -}}
        </span>
      {% endif %}
      {% if camp_details.field_camp_location_short_.0 %}
        <span class="site-hero__details-item">
          {{ camp_details.field_camp_location_short_.value }}
        </span>
      {% endif %}
      <button class="site-hero__details-button">
        <div class="visually-hidden">Show camp details</div>
      </button>
    </div>
    <div class="site-hero__media">
      <button class="site-hero__play-pause" type="button" aria-pressed="false">Pause</button>
      <video
        loop
        autoplay
        muted
        playsinline
        poster="{{ pubsub_path }}/videos/fldc22-promo.webp"
        width="544"
        height="480"
      >
        <source src="{{ pubsub_path }}/videos/fldc22-promo.webm" type="video/webm">
        <source src="{{ pubsub_path }}/videos/fldc22-promo.mp4" type="video/mp4">
      </video>

    </div>
  </div>
</div>
